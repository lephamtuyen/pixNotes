<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/background_capture_image">
	
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_centerInParent="true"
    	android:layout_marginLeft="@dimen/margin_30dp"
    	android:layout_marginRight="@dimen/margin_30dp"
    	android:background="@drawable/shap_back_background"
    	>
    	
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_centerInParent="true"
    	android:layout_marginLeft="@dimen/margin_10dp"
    	android:layout_marginRight="@dimen/margin_10dp"
    	android:layout_marginTop="@dimen/margin_15dp"
    	>
    	
	        <TextView  
	        android:id="@+id/tv_bordersize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/str_opacity"
	        android:textColor="@color/text_color"
	        android:textSize="@dimen/text_size_20dp"/>
		
	        <RelativeLayout 
	        	android:id="@+id/rl_size_bar"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginTop="@dimen/margin_10dp">
	            <SeekBar
	                android:id="@+id/size_bar"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:max="200"
	                android:progress="0"
	                style="@style/mySeekBar"
	              	android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:thumbOffset="0dp"
					android:thumb="@drawable/thumb_seekbar_red"
	                />
	        </RelativeLayout>
	         
	        <TextView  
	        android:id="@+id/tv_bordersize"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="     "
	        />
	        
        </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>